<config
        xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
        xmlns='http://www.ehcache.org/v3'
        xmlns:ehcache='http://www.ehcache.org/v3/jsr107'>

    <cache alias="CONTRACT" uses-template="short-cache" />

    <cache-template name="short-cache">
        <expiry>
            <ttl unit="minutes">1</ttl>
        </expiry>
        <resources>
            <heap unit="entries">100</heap>
        </resources>
    </cache-template>

</config>